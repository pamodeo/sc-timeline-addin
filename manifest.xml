<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">

  <Id>7a683a99-9c78-4962-bcdb-84b9e08bfd12</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Octave</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="SC TimeLine"/>
  <Description DefaultValue="Sync Outlook appointments to Timeline via Databridge Pro"/>
  
  <IconUrl DefaultValue="https://pamodeo.github.io/sc-timeline-addin/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://pamodeo.github.io/sc-timeline-addin/assets/icon-80.png"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.5"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://pamodeo.github.io/sc-timeline-addin/index.html"/>
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Appointment" FormType="Read"/>
    <Rule xsi:type="ItemIs" ItemType="Appointment" FormType="Edit"/>
  </Rule>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">
      <Requirements>
        <bt:Sets DefaultMinVersion="1.5">
          <bt:Set Name="Mailbox"/>
        </bt:Sets>
      </Requirements>
      <Hosts>
        <Host xsi:type="MailHost">
          <DesktopFormFactor>
            <FunctionFile resid="Cmd.Url"/>

            <ExtensionPoint xsi:type="AppointmentOrganizerCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="scGroup1"> <Label resid="GpLabel"/>
                  <Control xsi:type="Button" id="btnSync1">
                    <Label resid="Btn.Label"/>
                    <Supertip>
                      <Title resid="Btn.Label"/>
                      <Description resid="Btn.Tip"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon.16"/>
                      <bt:Image size="32" resid="Icon.32"/>
                      <bt:Image size="80" resid="Icon.80"/>
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="Tp.Url"/>
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>

            <ExtensionPoint xsi:type="AppointmentAttendeeCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="scGroup2"> <Label resid="GpLabel"/>
                  <Control xsi:type="Button" id="btnSync2">
                    <Label resid="Btn.Label"/>
                    <Supertip>
                      <Title resid="Btn.Label"/>
                      <Description resid="Btn.Tip"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon.16"/>
                      <bt:Image size="32" resid="Icon.32"/>
                      <bt:Image size="80" resid="Icon.80"/>
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="Tp.Url"/>
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>
          </DesktopFormFactor>
        </Host>
      </Hosts>

      <Resources>
        <bt:Images>
          <bt:Image id="Icon.16" DefaultValue="https://pamodeo.github.io/sc-timeline-addin/assets/icon-16.png"/>
          <bt:Image id="Icon.32" DefaultValue="https://pamodeo.github.io/sc-timeline-addin/assets/icon-32.png"/>
          <bt:Image id="Icon.80" DefaultValue="https://pamodeo.github.io/sc-timeline-addin/assets/icon-80.png"/>
        </bt:Images>
        <bt:Urls>
          <bt:Url id="Cmd.Url" DefaultValue="https://pamodeo.github.io/sc-timeline-addin/commands.html"/>
          <bt:Url id="Tp.Url" DefaultValue="https://pamodeo.github.io/sc-timeline-addin/index.html"/>
        </bt:Urls>
        <bt:ShortStrings>
          <bt:String id="GpLabel" DefaultValue="SC TimeLine"/>
          <bt:String id="Btn.Label" DefaultValue="Sync to Timeline"/>
        </bt:ShortStrings>
        <bt:LongStrings>
          <bt:String id="Btn.Tip" DefaultValue="Open SC TimeLine sync panel"/>
        </bt:LongStrings>
      </Resources>
    </VersionOverrides>
  </VersionOverrides>
</OfficeApp>
